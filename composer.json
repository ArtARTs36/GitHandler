{
    "name": "artarts36/git-handler",
    "description": "Git Handler",
    "type": "library",
    "require": {
        "php": ">=7.3",
        "artarts36/shell-command": "^1.4",
        "artarts36/str": "^1.3.14",
        "webmozart/assert": "^1.10",
        "psr/http-client": "^1.0",
        "guzzlehttp/psr7": "^1.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "squizlabs/php_codesniffer": "^3.5",
        "guzzlehttp/guzzle": "^7.3",
        "infection/infection": "^0.18.2"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "ArtARTs36",
            "email": "temicska99@mail.ru"
        }
    ],
    "autoload": {
        "psr-4": {
            "ArtARTs36\\GitHandler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ArtARTs36\\GitHandler\\Tests\\": "tests/"
        },
        "files": [
            "tests/functions.php"
        ]
    },
    "scripts": {
        "lint": [
            "./vendor/bin/phpcs --standard=PSR2 src/",
            "./vendor/bin/phpcs --standard=PSR2 tests/"
        ],
        "test": [
            "XDEBUG_MODE=coverage ./vendor/bin/phpunit -v --coverage-text --configuration phpunit.xml"
        ],
        "mutate-test": [
            "./vendor/infection/infection/bin/infection --min-covered-msi=75"
        ]
    }
}
