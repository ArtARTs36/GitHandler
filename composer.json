{
    "name": "artarts36/git-handler",
    "description": "Git Handler",
    "type": "library",
    "require": {
        "php": ">=7.3",
        "artarts36/shell-command": "^1.4",
        "artarts36/str": "^1.3.8",
        "webmozart/assert": "^1.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "ArtARTs36",
            "email": "temicska99@mail.ru"
        }
    ],
    "autoload": {
        "psr-4": {
            "ArtARTs36\\GitHandler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ArtARTs36\\GitHandler\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": [
            "./vendor/bin/phpcs --standard=PSR2 src/",
            "./vendor/bin/phpcs --standard=PSR2 tests/"
        ],
        "test": [
            "./vendor/bin/phpunit -v --coverage-text --colors=always --configuration phpunit.xml"
        ]
    }
}
